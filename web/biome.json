{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": ["**/*.mjs", "**/*.ts", "**/*.tsx", "**/*.astro", "!node_modules", "!server/src/prisma"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"recommended": true,
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"performance": {
				"recommended": true
			},
			"recommended": true,
			"nursery": {
				"recommended": true
			},
			"complexity": {
				"recommended": true
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noChildrenProp": "off",
				"useImportExtensions": "off"
			},
			"security": {
				"recommended": true,
				"noDangerouslySetInnerHtml": "warn"
			},
			"a11y": {
				"recommended": false,
				"useKeyWithClickEvents": "off",
				"noSvgWithoutTitle": "off"
			},
			"style": {
				"recommended": true,
				"noImplicitBoolean": "off"
			},
			"suspicious": {
				"recommended": true,
				"noPrototypeBuiltins": "warn",
				"noReactSpecificProps": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 180
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 4,
			"indentStyle": "tab"
		}
	}
}
